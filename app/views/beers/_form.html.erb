<div class="row">
  <div class="medium-3 columns">

    <%= form_for @beer do |f| %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :percentage %>
      <%= f.number_field :percentage, step: 0.1 %>

      <%= f.label :brewery %>
      <%= f.text_field :brewery %>

      <%= f.label :photo %>
      <%= f.text_field :photo %>

      <%= f.label :category %>
      <%= f.collection_select (:category, @categories, :to_s, :to_s) 
      # http://stackoverflow.com/questions/20122257/ror-collection-select-from-array 
      %>


      <%= f.submit %>
    <% end %>
  </div>
</div>